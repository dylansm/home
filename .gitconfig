[user]
  name = Dylan Smith
  email = rh@izo.me
[color]
  ui = auto
  pager = true
  branch = true
  status = true
  diff = true
[color "diff"]
  meta = yellow
  frag = cyan
  old = red
  new = white
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = red
[color "status"]
  added = yellow
  changed = white
  untracked = cyan
[alias]
  st = status -s
  ci = commit
  co = checkout
  br = branch
  df = diff --stat
  lg = log --oneline --decorate
  lgt = log -1 --format=%ai
  mm = commit --amend
  pr = request-pull master ./
  rp = rev-parse HEAD
  # the acronym stands for "subtree add"
  sa = "!f() { git subtree add --prefix $2 $1 master --squash; }; f"
  # the acronym stands for "subtree update"
  su = "!f() { git subtree pull --prefix $2 $1 master --squash; }; f"
[push]
  default = simple

[diff]
    tool = meld
[difftool]
    prompt = false
[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"

[merge]
    tool = meld
[mergetool "meld"]
    # Choose one of these two lines (not both!) explained below.
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
    cmd = meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"

[core]
	excludesfile = /Users/dylan/.git_excludes
[init]
	defaultBranch = main
