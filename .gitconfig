[user]
  name = Dylan Smith
  email = dylan@rh.izo.me
[core]
  pager = less -FRSX
  excludesfile = ~/.git_excludes
[color]
  ui = auto
  pager = true
  branch = true
  status = true
  diff = true
[color "diff"]
  meta = yellow
  frag = cyan
  old = red
  new = white
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = red
[color "status"]
  added = yellow
  changed = white
  untracked = cyan
[alias]
  st = status -s
  ci = commit
  co = checkout
  br = branch
  df = diff --stat
  lg = log --oneline --decorate
  mm = commit --amend
  rp = rev-parse HEAD
  # the acronym stands for "subtree add"
  sa = "!f() { git subtree add --prefix $2 $1 master --squash; }; f"
  # the acronym stands for "subtree update"
  su = "!f() { git subtree pull --prefix $2 $1 master --squash; }; f"
[push]
  default = simple

[difftool "Changes"]
  cmd = chdiff --wait \"$LOCAL\" \"$REMOTE\"
[mergetool "Changes"]
  cmd = chdiff --wait \"$LOCAL\" \"$REMOTE\"
  keepBackup = false
  trustExitCode = false

[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
