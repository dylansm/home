# get homebrew
[ /usr/local/bin/brew ] || ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

shopt -s expand_aliases
source ~/.zshrc.d/aliases.zsh

# install cli tools `caski` is alias
brewi ctags
brewi dnsmasq
brewi ffmpeg
brewi fzf
brewi imagemagick
brewi jenv
brewi mysql
brewi neovim/neovim/neovim
brewi nginx
brewi nvm
brewi homebrew/php/php56-mcrypt
brewi pyenv
brewi python
brewi rbenv
brewi tmux
brewi youtube-dl

# get cask
[ /usr/local/bin/brew-cask ] || caski caskroom/cask/brew-cask

# install apps
caski 1password
caski alfred
caski base
caski daisydisk
caski fantastical
caski kaleidoscope
caski postico
caski transmit
caski acorn
caski dash
caski fontexplorer-x-pro
caski keyboard-maestro
caski querious
caski virtualbox
caski betterzip
caski dockertoolbox
caski google-chrome
caski launchbar
caski sketch
caski vmware-fusion
caski cleanmymac
caski dropbox
caski java
caski nvalt
caski subler

#install colorpickers
caski colorpicker-hex
caski colorpicker-skalacolor
